    <div id="side-column">
        <a href="#">Dashboard</a>
        <a href="#">My Cart</a>
        <a href="#">My Learning</a>
        <a href="notes.html">Notes</a>
    </div>

        <div id="search-bar">
            <input type="text" id="search-input" placeholder="Search courses...">
        <div id="search-icon-container" onclick="searchCourses()">
            <i class="fa fa-search"></i>
        </div>
    </div>

    <div id="filter">
        <span>Filter by:</span>
        <input type="checkbox" id="all-checkbox" onclick="filterCourses()"> All
        <input type="checkbox" id="cs-checkbox" onclick="filterCourses()"> Computer Science
        <input type="checkbox" id="math-checkbox" onclick="filterCourses()"> Maths
        <input type="checkbox" id="eng-checkbox" onclick="filterCourses()"> English
        <input type="checkbox" id="mgmt-checkbox" onclick="filterCourses()"> Management
        <input type="checkbox" id="arts-checkbox" onclick="filtercourses()">Arts
    </div>
    <div id="courses-container">
    </div>
    <div class="course-container">
      <% courses.forEach(course => { %>
          <div class="card">
              <div class="course-name"><%= course.title %></div>
              <div class="course-img">
                  <img src=<%=course.image  %> alt="<%= course.title %>">
              </div>
              <div class="teacher">
                  Instructor: <%= course.created_by ? course.created_by.name : 'Unknown' %>  <!-- Safely check for created_by -->
              </div>
              <div class="rating">Rating: <%= course.rating || '⭐⭐⭐⭐' %></div> <!-- Display course rating -->
              <div class="description"><%= course.description %></div>
              <div>
                <form action="/enroll/<%= course.id %>" method="POST">
                  <button type="submit" style="background-color:#217b7e; height: 50px; width: 150px; margin-top: 4%;">Enroll</button>
                </form>
              </div>
          </div>
      <% }) %>
  </div>
    <footer>
      <div class="footer-innerdiv1">
        <div class="col1">
            <ul class="footer-ul">
                <li class="footer-li" style="font-weight: 700;">QuikLearn for Business</li>
