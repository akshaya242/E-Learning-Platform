<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= course.title %> | Course</title>

  <!-- Include Bootstrap CSS for styling -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

  <!-- Google Fonts for modern typography -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

  <!-- Font Awesome for Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

  <!-- Plyr.js CSS for custom video player -->
  <link rel="stylesheet" href="https://cdn.plyr.io/3.7.8/plyr.css" />

  <!-- Custom CSS Styles -->
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #f8f9fa;
      color: #333;
    }

    .container {
      padding-top: 20px;
    }

    /* Header Styles */
    .header {
      background-color: rgb(0, 139, 139);
      color: white;
      padding: 15px 0;
      text-align: center;
    }

    .header h1 {
      font-size: 2rem;
      margin: 0;
    }

    .navbar-custom {
      background-color: rgb(6, 117, 117);
    }

    .navbar-custom .navbar-nav .nav-link {
      color: white;
      font-weight: 500;
      padding: 15px;
    }

    .navbar-custom .navbar-nav .nav-link:hover {
      background-color: #005085;
      border-radius: 5px;
    }

    /* Enhanced Video Player */
    .plyr {
      border-radius: 8px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
    }

    .course-info {
      margin-bottom: 25px;
    }

    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
      border-radius: 50px;
      padding: 8px 20px;
      font-weight: 600;
      color: white;
    }

    .btn-primary:hover {
      background-color: #0056b3;
    }

    /* Sidebar */
    .sidebar {
      max-height: 600px;
      overflow-y: auto;
      background-color: #fff;
      padding: 15px;
      border-radius: 8px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      margin-bottom: 30px;
    }

    .sidebar h5 {
      color: #007bff;
    }

    .section-title {
      cursor: pointer;
      font-weight: 600;
      padding: 10px;
      border-bottom: 1px solid #e9ecef;
      display: flex;
      justify-content: space-between;
      transition: background 0.3s, color 0.3s;
      border-radius: 5px;
      background-color: #f1f1f1;
    }

    .section-title:hover {
      background-color: #007bff;
      color: white;
    }

    .section-content {
      display: none;
      padding-left: 20px;
      transition: all 0.3s;
    }

    /* FAQ and Quiz */
    .faq, .quiz {
      margin-top: 25px;
      padding: 15px;
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .faq-item {
      margin-bottom: 15px;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .sidebar {
        max-height: 300px;
      }

      .course-info h2 {
        font-size: 1.5rem;
      }
    }
  </style>
</head>
<body>
  <!-- Header -->
  <div class="header">
    <h1>Welcome to <%= course.title %></h1>
  </div>

  <!-- Navigation Bar -->
  <nav class="navbar navbar-expand navbar-custom">
    <div class="container">
      <!-- Brand Logo -->
      <a class="navbar-brand text-white" href="/">
        <i class="fas fa-graduation-cap"></i> E-Learning Platform
      </a>

      <!-- Toggler Button for Mobile -->
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Collapsible Navbar Menu -->
      <div class="collapse navbar-collapse" id="navbarNav" style="margin-left: 60%;">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">
              <i class="fas fa-home"></i> Home
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/dashboard">
              <i class="fas fa-tachometer-alt"></i> My Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/profile">
              <i class="fas fa-user"></i> Profile
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">
              <i class="fas fa-sign-out-alt"></i> Logout
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="row">
      <!-- Main Content: Video Player and Course Details -->
      <div class="col-lg-8">
        <div class="course-info">
          <h2><%= course.title %></h2>
          <p class="text-muted">Instructor: <%= teacher.name %></p>
        </div>

        <!-- Plyr.js Video Player -->
        <div class="video-player mb-4">
          <video id="plyr-player" class="plyr" controls>
            <source src="<%= currentSection.video.videoUrl %>" type="video/mp4">
            Your browser does not support the video tag.
          </video>
        </div>

        <!-- Below the video: Dynamic video title -->
        <h5 id="video-title"><%= currentSection.video.title %></h5>

        <!-- Course Description, Quiz, and FAQ -->
        <div>
          <!-- Course Description -->
          <h4>Description</h4>
          <p><%= course.description %></p>

          <!-- Quizzes (If the current section has a quiz) -->
          <% if (currentSection.quiz) { %>
            <div class="quiz">
              <h5>Quiz: <%= currentSection.quiz.title %></h5>
              <ul>
                <% currentSection.quiz.questions.forEach(function(question, index) { %>
                  <li><%= question %></li>
                <% }); %>
              </ul>
            </div>
          <% } %>

          <!-- FAQ Section -->
          <div class="faq">
            <h5>Frequently Asked Questions</h5>
            <div class="faq-item">
              <p><strong>Question 1:</strong> How long is the course?</p>
              <p>Answer: The course duration is approximately <%= course.duration %> hours.</p>
            </div>
            <div class="faq-item">
              <p><strong>Question 2:</strong> Is there a certificate upon completion?</p>
              <p>Answer: Yes, you will receive a certificate of completion.</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Sidebar: Sections and Videos -->
      <div class="col-lg-4">
        <div class="sidebar">
          <h5>Course Sections</h5>
          <% courseSections.sort((a, b) => a.index - b.index).forEach(function(section) { %>
            <div class="section">
              <h6 class="section-title" onclick="toggleSection('<%= section._id %>', '<%= section.video.videoUrl %>', '<%= section.video.title %>')">
                <%= section.title %> <i class="fas fa-chevron-down"></i>
              </h6>
              <div id="section-<%= section._id %>" class="section-content">
                <ul>
                  <li>
                    <a href="javascript:void(0)" class="text-primary" onclick="changeVideo('<%= section.video.videoUrl %>', '<%= section.video.title %>')">
                      <%= section.video.title %> 
                    </a>
                  </li>
                </ul>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
  </div>

  <!-- Include Bootstrap JS and FontAwesome -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Plyr.js JavaScript -->
  <script src="https://cdn.plyr.io/3.7.8/plyr.polyfilled.js"></script>

  <!-- Custom JavaScript to handle changing the video dynamically -->
  <script>
    // Initialize Plyr
    const player = new Plyr('#plyr-player');

    function toggleSection(sectionId, videoUrl, videoTitle) {
      var content = document.getElementById('section-' + sectionId);
      var icon = document.querySelector(`#section-${sectionId} .fas`);

      if (content.style.display === "none" || !content.style.display) {
        content.style.display = "block";
        icon.classList.replace('fa-chevron-down', 'fa-chevron-up');
      } else {
        content.style.display = "none";
        icon.classList.replace('fa-chevron-up', 'fa-chevron-down');
      }

      if (videoUrl && videoTitle) {
        changeVideo(videoUrl, videoTitle);
      }
    }

    function changeVideo(videoUrl, videoTitle) {
    // Change the video source
    player.source = {
      type: 'video',
      sources: [
        {
          src: videoUrl,
          type: 'video/mp4',
        },
      ],
    };

    // Wait for the new video to be ready before playing
    player.once('ready', function() {
      player.play().catch(function(error) {
        console.log("Error playing video: ", error);
      });
    });

    // Update video title
    document.getElementById('video-title').textContent = videoTitle;

    // Log the current video URL to the console
    console.log("Now playing video URL: " + videoUrl);
}


    document.addEventListener('DOMContentLoaded', function () {
      const sections = document.querySelectorAll('.section-content');
      sections.forEach(section => {
        section.style.display = "none";
      });
    });
  </script>
</body>
</html>