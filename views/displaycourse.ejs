<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= course.title %> | Course</title>

  <!-- Include Bootstrap CSS for styling -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

  <!-- Google Fonts for modern typography -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

  <!-- Font Awesome for Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

  <!-- Include Video.js CSS -->
  <link href="https://vjs.zencdn.net/7.15.4/video-js.css" rel="stylesheet" />

  <!-- Custom CSS Styles -->
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #f8f9fa;
      color: #333;
    }

    .container {
      padding-top: 5px;
    }

    /* Header Styles */
    .header {
      background-color: rgb(0, 139, 139);
      color: white;
      padding: 15px 0;
      text-align: center;
    }

    .header h1 {
      font-size: 1.8rem;
      margin: 0;
    }

    .navbar-custom {
      background-color: rgb(6, 117, 117);
    }

    .navbar-custom .navbar-nav .nav-link {
      color: white;
      font-weight: 500;
      padding: 15px;
    }

    .navbar-custom .navbar-nav .nav-link:hover {
      background-color: #004095;
      border-radius: 5px;
    }

    /* Video Player */
    .video-player {
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
      overflow: hidden;
      position: relative;
    }

    /* Sidebar */
    .sidebar {
      max-height: 500px;
      overflow-y: auto;
      background-color: #fff;
      padding: 15px;
      border-radius: 8px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .sidebar h5 {
      color: #007bff;
    }

    .section-title {
      cursor: pointer;
      font-weight: 600;
      padding: 10px;
      border-bottom: 1px solid #e9ecef;
      display: flex;
      justify-content: space-between;
      transition: background 0.3s, color 0.3s;
      border-radius: 5px;
      background-color: #f1f1f1;
    }

    .section-title:hover {
      background-color: #007bff;
      color: white;
    }

    .section-content {
      display: none;
      padding-left: 20px;
      transition: all 0.3s;
    }

    .course-info {
      margin-bottom: 25px;
    }

    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
      border-radius: 50px;
      padding: 8px 20px;
      font-weight: 600;
      color: white;
    }

    .btn-primary:hover {
      background-color: #0056b3;
    }

    /* FAQ and Quiz */
    .faq, .quiz {
      margin-top: 25px;
      padding: 15px;
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .faq-item {
      margin-bottom: 15px;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .sidebar {
        max-height: 300px;
      }

      .video-player {
        height: 300px;
      }

      .course-info h2 {
        font-size: 1.5rem;
      }
    }
  </style>
</head>
<body>
  <!-- Header and Navigation Bar (Same as previous) -->
  
  <div class="container mt-4">
    <div class="row">
      <!-- Main Content: Video Player and Course Details -->
      <div class="col-lg-8">
        <div class="course-info">
          <h2><%= course.title %></h2>
          <p class="text-muted">Instructor: <%= teacher.name %></p>
        </div>

        <!-- Video.js Player -->
        <div class="video-player mb-4">
          <video
            id="course-video-player"
            class="video-js vjs-default-skin vjs-big-play-centered"
            controls
            preload="auto"
            width="100%"
            height="100%"
            data-setup='{}'>
            <source id="video-source" src="<%= currentSection.video.videoUrl %>" type="video/mp4" />
            Your browser does not support the video tag.
          </video>
        </div>

        <!-- Below the video: Dynamic video title -->
        <h5 id="video-title"><%= currentSection.video.title %></h5>

        <!-- Below the video: Course Description, Quiz, FAQ -->
        <div>
          <!-- Course Description -->
          <h4>Description</h4>
          <p><%= course.description %></p>

          <!-- Quizzes (If the current section has a quiz) -->
          <% if (currentSection.quiz) { %>
            <div class="quiz">
              <h5>Quiz: <%= currentSection.quiz.title %></h5>
              <ul>
                <% currentSection.quiz.questions.forEach(function(question, index) { %>
                  <li><%= question %></li>
                <% }); %>
              </ul>
            </div>
          <% } %>

          <!-- FAQ Section -->
          <div class="faq">
            <h5>Frequently Asked Questions</h5>
            <!-- Dynamically render FAQs (replace with actual FAQ data) -->
            <div class="faq-item">
              <p><strong>Question 1:</strong> How long is the course?</p>
              <p>Answer: The course duration is approximately <%= course.duration %> hours.</p>
            </div>
            <div class="faq-item">
              <p><strong>Question 2:</strong> Is there a certificate upon completion?</p>
              <p>Answer: Yes, you will receive a certificate of completion.</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Sidebar: Sections and Videos (Same as previous) -->
    </div>
  </div>

  <!-- Include Bootstrap JS, FontAwesome, and Video.js -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>
  <script src="https://vjs.zencdn.net/7.15.4/video.min.js"></script>

  <!-- Custom JavaScript to handle the collapsible sections and change video -->
  <script>
    function toggleSection(sectionId, videoUrl, videoTitle) {
      var content = document.getElementById('section-' + sectionId);
      var icon = document.querySelector(`#section-${sectionId} .fas`);

      if (content.style.display === "none" || !content.style.display) {
        content.style.display = "block";
        icon.classList.replace('fa-chevron-down', 'fa-chevron-up');
      } else {
        content.style.display = "none";
        icon.classList.replace('fa-chevron-up', 'fa-chevron-down');
      }

      // Change video to the one from the section if a video exists
      if (videoUrl && videoTitle) {
        changeVideo(videoUrl, videoTitle);
      }
    }

    // Function to change the video source and title
    function changeVideo(videoUrl, videoTitle) {
      var videoPlayer = videojs('course-video-player');
      var videoSource = document.getElementById('video-source');
      var titleElement = document.getElementById('video-title');

      // Update video source
      videoSource.src = videoUrl;
      videoPlayer.src({ type: 'video/mp4', src: videoUrl });
      videoPlayer.load(); // Reload the video to play the new source

      // Update video title
      titleElement.textContent = videoTitle;
    }

    // Ensure all sections are initially hidden
    document.addEventListener('DOMContentLoaded', function () {
      const sections = document.querySelectorAll('.section-content');
      sections.forEach(section => {
        section.style.display = "none";
      });
    });
  </script>
</body>
</html>
