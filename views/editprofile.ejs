<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile | QuickLearn</title>
    <!-- Google Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f6f9;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .edit-profile-container {
            background-color: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            width: 400px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #333;
        }

        .profile-picture {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .profile-picture img {
            border-radius: 50%;
            width: 100px;
            height: 100px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            font-weight: 500;
            margin-bottom: 8px;
            color: #333;
        }

        .form-group input, .form-group textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 16px;
        }

        .form-group input:focus, .form-group textarea:focus {
            border-color: #42a5f5;
            outline: none;
        }

        .form-group textarea {
            resize: none;
            height: 100px;
        }

        .btn {
            display: inline-block;
            background: linear-gradient(45deg, #42a5f5, #478ed1);
            color: white;
            border: none;
            padding: 12px 24px;
            width: 100%;
            text-align: center;
            border-radius: 30px;
            font-size: 18px;
            cursor: pointer;
            transition: background 0.3s;
        }

        .btn:hover {
            background: linear-gradient(45deg, #478ed1, #42a5f5);
        }

        .btn-secondary {
            background-color: #f0f0f0;
            color: #333;
            margin-top: 10px;
        }

        .btn-secondary:hover {
            background-color: #ddd;
        }

        .profile-actions {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .profile-actions button {
            width: 48%;
        }

        .material-icons-sharp {
            vertical-align: middle;
            margin-right: 8px;
        }
    </style>
</head>
<body>
    <div class="edit-profile-container">
        <h2>Edit Your Profile</h2>

        <!-- Profile Picture -->
        <div class="profile-picture">
            <img src="<%= profile.profile_picture ? profile.profile_picture : '/images/default-avatar.png' %>" alt="Profile Picture">
        </div>

        <!-- Form for Editing Profile -->
        <form id="editProfileForm" action="/teacher/updateprofile" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" id="name" name="name" value="<%= login.name %>" required>
            </div>

            <div class="form-group">
                <label for="bio">Bio</label>
                <textarea id="bio" name="bio"><%= profile.bio %></textarea>
            </div>

            <div class="form-group">
                <label for="contact_number">Contact Number</label>
                <input type="text" id="contact_number" name="contact_number" value="<%= profile.contact_number %>" required>
            </div>

            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" id="address" name="address" value="<%= profile.address %>" required>
            </div>

            <!-- Action Buttons -->
            <div class="profile-actions">
                <button type="submit" class="btn">
                    <span class="material-icons-sharp">save</span>Save Changes
                </button>
                <button type="button" class="btn btn-secondary" onclick="window.location.href='/teacher/dashboard'">
                    <span class="material-icons-sharp">arrow_back</span>Back to Dashboard
                </button>
            </div>
        </form>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('editProfileForm');
    
            form.addEventListener('submit', async function (e) {
                e.preventDefault(); // Prevent default form submission
    
                // Collect form data
                const formData = new FormData(form);
                const data = Object.fromEntries(formData.entries());
    
                try {
                    // Send POST request to update profile (fixed the URL to match the form action)
                    const response = await fetch('/teacher/updateprofile', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(data)
                    });
    
                    // Attempt to parse JSON response
                    const result = await response.json();
    
                    if (response.ok) {
                        // Profile updated successfully
                        console.log('Profile updated:', result.profile);
                        alert('Profile updated successfully!');
                    } else {
                        // Handle errors
                        console.error('Error updating profile:', result.message);
                        alert(`Error: ${result.message}`);
                    }
                } catch (error) {
                    // Catch network errors, or errors during the fetch
                    console.error('Fetch error:', error);
                    alert('Failed to update profile due to a network or server error.');
                }
            });
        });
    </script>
    
</body>
</html>
