<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>QuikLearn</title>
    <!-- Font Awesome Icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@600;700&display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>

    <!-- Stylesheet -->
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <%- include("header.ejs") %>
    <div id="deraj-faq">
    



    <div class="blank">
        <h1 style="color: black;">Frequently Asked Questions</h1>


              <div class="faq-container">
                

                <div class="faqs">
                  <% faqs.forEach(faq => { %>
                      <div class="faq">
                          <h3 class="faq-title"><%= faq.question %></h3>
                          <p class="faq-text" style="display: none;"><%= faq.answer %></p>
                          <button class="faq-toggle">
                              <i class="fas fa-chevron-down"></i>
                              <i class="fas fa-times" style="display: none;"></i>
                          </button>
                      </div>
                  <% }); %>
              </div>
              
              <script>
                  document.querySelectorAll('.faq-toggle').forEach(button => {
                      button.addEventListener('click', () => {
                          const faqText = button.parentElement.querySelector('.faq-text');
                          faqText.style.display = faqText.style.display === 'none' ? 'block' : 'none';
                          button.querySelector('.fas').forEach(icon => {
                              icon.style.display = icon.style.display === 'none' ? 'inline' : 'none';
                          });
                      });
                  });
              </script>
                
  
    </div>
    <div id = "footer"></div>
    

    <!-- Script -->
  </div>
  <div id="footer"><%- include('footer') %></div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
  <script src="index.js"></script>
  </body>
</html>