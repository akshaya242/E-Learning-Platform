<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Dashboard</title>
    <link rel="shortcut icon" href="./images/logo.png">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <header>
        <div class="logo" title="QuikLearn">
            <img src="/images/logo2.svg" alt="">
        </div>
        <div class="navbar">
            <a href="/" class="active">
                <span class="material-icons-sharp">home</span>
                <h3>Home</h3>
            </a>
            <a href="password.html">
                <span class="material-icons-sharp">password</span>
                <h3>Change Password</h3>
            </a>
            <a href="/teacher/create-course">
                <span class="material-icons-sharp">add_circle</span>
                <h3>Add Course</h3>
            </a>
            <a href="/logout">
                <span class="material-icons-sharp" onclick="">logout</span>
                <h3>Logout</h3>
            </a>
           
        </div>
        <div id="profile-btn">
            <span class="material-icons-sharp">person</span>
        </div>
        <div class="theme-toggler">
            <span class="material-icons-sharp active">light_mode</span>
            <span class="material-icons-sharp">dark_mode</span>
        </div>
        
    </header>
    <div class="container">
        <aside>
            <div class="profile">
                <div class="top">
                    <div class="profile-photo">
                        <img src="/images/Kamal.png" alt="">
                    </div>
                    <div class="info">
                        <p>Hi, <b><%=login.name %></b> </p>
                        <small class="text-muted"> Designation:<%= login.role%></small>
                    </div>
                </div>
                <div class="about">
                    <h5>Personal Information</h5>
                    <p><%=profile.bio%></p>
                    <h5>Contact</h5>
                    <p><%= profile.contact_number %></p>
                    <h5>Email</h5>
                    <p><%= login.email%></p>
                    <h5>Address</h5>
                    <p><%= profile.address%></p>
                    <h5>institution</h5>
                    <p><%=login.institution%></p>
             
                </div>
                <div class="profile-section">
                    <div class="profile-info">
                        <!-- Other profile-related content here -->
                         <a href="/teacher/editprofile">
                        <button class="edit-profile-btn">
                            <span class="material-icons-sharp">edit</span> <!-- Edit Icon -->
                            Edit Profile
                        </button>
                        <a>
                    </div>
                </div>
                
            </div>
            
        </aside>

        <main>
            <h1>My Courses</h1>
            <div class="subjects">
                <% courses.forEach(course => { %>
                    <div class="subject">
                        <!-- Dynamically display different icons based on the course category or other logic -->
                        <span class="material-icons-sharp">
                            <% if (course.category === 'Engineering') { %>architecture
                            <% } else if (course.category === 'Mathematics') { %>functions
                            <% } else if (course.category === 'Computer Science') { %>computer
                            <% } else if (course.category === 'Database') { %>dns
                            <% } else if (course.category === 'Networking') { %>router
                            <% } else { %>school
                            <% } %>
                        </span>
                        <h3><%= course.title %></h3>
                        <h2><!-- Example of progress display, replace 12/14 with actual course data --></h2>
                        <div class="progress">
                            <svg><circle cx="38" cy="38" r="36"></circle></svg>
                            <div class="number">
                                <p>
                                    <% if (course.rating) { %>
                                        <%= Math.round(course.rating * 100) %>%
                                    <% } else { %>
                                        N/A
                                    <% } %>
                                </p>
                            </div>
                        </div>
                        <small class="text-muted">Last 24 Hours</small>
                    </div>
                <% }) %>
            </div>
            

            
        </main>

        <div class="container">
            <div class="right-container ">
                <!-- Your main content here -->
            </div>
            
            <div class="container" style="float: right; width: 1000%; margin-right: 60px;">
                <div class="announcements" style="background-color: #f9f9f9; padding: 15px; border-radius: 20px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); width: 300%; margin-right: 300px;">
                    <h2>FAQ'S</h2>
                    <div class="updates">
                        <!-- Dynamic FAQ Rendering -->
                        <% faqs.forEach(faq => { %>
                            <div class="message" style="margin-bottom: 10px; padding-bottom: 10px; border-bottom: 1px solid #eee;">
                                <p style="font-weight: bold; font-size: 1.1rem;"><b><%= faq.category %></b><br> <%= faq.question %></p>
                                <small class="text-muted" style="color: #888; display: block; margin-top: 5px;"><%= faq.answer %></small>
                                <small class="text-muted" style="color: #888; display: block; margin-top: 5px;"><%= faq.createdAt.toLocaleDateString() %></small>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>
            
        </div>
        
        <aside class="right-sidebar" style="margin-top: -1650px;">
            <div class="right-leaves">
                <h2>Teachers on Spotlight</h2>
                <div class="teacher">
                    <div class="profile-photo"><img src="./images/profile-2.jpeg" alt=""></div>
                    <div class="info">
                        <h3>The Professor</h3>
                        <small class="text-muted">Course Name</small>
                    </div>
                </div>
                <div class="teacher">
                    <div class="profile-photo"><img src="./images/profile-3.jpg" alt=""></div>
                    <div class="info">
                        <h3>Lisa Manobal</h3>
                        <small class="text-muted">Course Name</small>
                    </div>
                </div>
                <div class="teacher">
                    <div class="profile-photo"><img src="./images/profile-4.jpg" alt=""></div>
                    <div class="info">
                        <h3>Himanshu Jindal</h3>
                        <small class="text-muted">Course Name</small>
                    </div>
                </div>
            </div>
        </aside>
   
    
    <script src="studentDashboard.js"></script>
</body>
</html>